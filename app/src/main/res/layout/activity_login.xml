<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_scroll"
    android:fillViewport="true"
    android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">
                <ImageView
                    android:layout_margin="20dp"
                    android:id="@+id/user_photo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher" />
            </FrameLayout>
            <LinearLayout
                android:background="@drawable/list_bg_line"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minWidth="60dp"
                    android:text="手机号："
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edit_user_name"
                    android:layout_width="0dp"
                    android:hint="请输入手机号"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:textColor="#666666"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/user_more"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/more_down" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/list_bg_line"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minWidth="60dp"
                    android:text="密    码："
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="请输入密码"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:textColor="#666666"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/see_password"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/password_colse_eye" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <CheckBox
                    android:id="@+id/save_password"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/select_check_box"
                    android:button="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/save_password"
                    android:text="记住密码"
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:text="忘记密码？"
                    android:textColor="#FF2AC3A4"
                    android:textSize="13sp" />
            </RelativeLayout>

            <TextView
                android:gravity="center"
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/select_login_button"
                android:enabled="false"
                android:focusable="true"
                android:text="登陆"
                android:textColor="#666666"
                android:textSize="17sp" />

            <TextView
                android:gravity="center"
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_stroke_register"
                android:enabled="true"
                android:focusable="true"
                android:text="注册"
                android:textColor="#666666"
                android:textSize="17sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/login_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="遇到问题"
                    android:layout_margin="20dp"
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </FrameLayout>

        </LinearLayout>

</ScrollView>